<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    android:background="@color/darkgray"
    tools:context=".MainActivity" >
<TextView
        android:id="@+id/textview1"
        android:text="@string/city" 
        android:textSize="35sp"
        android:textColor="#FFF"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         /> 
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3"
    android:weightSum="2"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/imageview1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="0.8"
        android:src="@drawable/day0"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:weightSum="6"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textview2"
        android:text="@string/climate" 
        android:textSize="55sp"
        android:textColor="#FFF"
        android:paddingLeft="10dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         /> 
         <TextView
        android:id="@+id/textview3"
        android:text="@string/climatevary" 
        android:textSize="20sp"
        android:textColor="#FFF"
        android:paddingLeft="10dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         /> 
          <TextView
        android:id="@+id/textview4"
        android:text="@string/shidu" 
        android:textSize="15sp"
        android:textColor="#FFF"
        android:paddingLeft="10dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         /> 
         
     </LinearLayout>

</LinearLayout>
    
   <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         android:orientation="vertical"
         android:weightSum="2"
         >
    <TextView
        android:id="@+id/textview5"
        android:text="预报" 
        android:textSize="15sp"
        android:textColor="#FFF"
        android:paddingLeft="10dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         /> 
        <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5"
         > 
         <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
         > 
        <TextView
         android:id="@+id/textview6"
         android:paddingLeft="10dp"
         android:layout_weight="0.5"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:text="第一天" 
         android:textColor="#fff"/>
            
        <ImageView
            android:id="@+id/imageview2"
            android:layout_width="match_parent"
             android:layout_weight="0.6"
            android:layout_height="0dp"
            android:src="@drawable/day0" />

        </LinearLayout>
        <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
         > 
        <TextView
         android:id="@+id/textview7"
         android:paddingLeft="10dp"
         android:layout_weight="0.5"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:text="第二天" 
         android:textColor="#fff"/>
            
        <ImageView
        android:id="@+id/imageview3"
        android:layout_weight="0.6"
        android:src="@drawable/day1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
        </LinearLayout>
        <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
         > 
        <TextView
         android:id="@+id/textview8"
         android:paddingLeft="10dp"
         android:layout_weight="0.5"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:text="第三天" 
         android:textColor="#fff"/>
        <ImageView
        android:id="@+id/imageview4"
        android:layout_weight="0.6"
        android:src="@drawable/day2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
        </LinearLayout>
         <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
         > 
        <TextView
         android:id="@+id/textview9"
         android:paddingLeft="10dp"
         android:layout_weight="0.5"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:text="第四天" 
         android:textColor="#fff"/>
            
        <ImageView
        android:id="@+id/imageview5"
        android:layout_weight="0.6"
        android:src="@drawable/day3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
        </LinearLayout>
       <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
         > 
        <TextView
         android:id="@+id/textview10"
         android:paddingLeft="10dp"
         android:layout_weight="0.5"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:text="第五天" 
         android:textColor="#fff"/>
            
        <ImageView
        android:id="@+id/imageview6"
        android:layout_weight="0.6"
        android:src="@drawable/day4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
        </LinearLayout>
          </LinearLayout>
       
   </LinearLayout>
</LinearLayout>